{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "${title}"
    },
    {
      "separator": true,
      "type": "ColumnSet",
      "$data": "${peoples}",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type":"TextBlock",
              "text": "${displayName}"
            }            
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Input.Toggle",              
              "value": "${schedule.monday}",
              "spacing": "Default",
              "wrap": true,
              "separator": true,                            
              "id":"${concat('togMon', ${email})}",
              "valueOn":"true",
              "valueOff":"false"
          }
          ]
        } ,
        {
          "type": "Column",
          "items": [
            {
              "type": "Input.Toggle",                            
              "value": "${schedule.tuesday}",
              "spacing": "Default",
              "wrap": true,
              "separator": true,                            
              "id":"${concat('togTue', ${email})}",
              "valueOn":"true",
              "valueOff":"false"
          }
          ]
        } ,
        {
          "type": "Column",
          "items": [
            {
              "type": "Input.Toggle",              
              "value": "${schedule.wednesday}",
              "spacing": "Default",
              "wrap": true,
              "separator": true,                            
              "id":"${concat('togWed', ${email})}",
              "valueOn":"true",
              "valueOff":"false"
          }
          ]
        } ,
        {
          "type": "Column",
          "items": [
            {
              "type": "Input.Toggle",              
              "value": "${schedule.thursday}",
              "spacing": "Default",
              "wrap": true,
              "separator": true,                            
              "id":"${concat('togThu', ${email})}",
              "valueOn":"true",
              "valueOff":"false"
          }
          ]
        } ,
        {
          "type": "Column",
          "items": [
            {
              "type": "Input.Toggle",              
              "value": "${schedule.friday}",
              "spacing": "Default",
              "wrap": true,
              "separator": true,                            
              "id":"${concat('togFri', ${email})}",
              "valueOn":"true",
              "valueOff":"false"
          }
          ]
        }              
      ]             
    }
  ]
}